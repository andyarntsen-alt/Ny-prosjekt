          <button class="btn ghost small" type="button" data-repeater-add data-template="benefits-template">Legg til fordel</button>
        </div>
        <div class="repeat-list" data-repeater-list>
          <% benefitItems.forEach((benefit) => { %>
            <div class="repeat-item" data-repeater-item>
              <div class="repeat-columns">
                <div>
