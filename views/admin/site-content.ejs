<%- include('../partials/layout-start') %>

<section class="section" style="padding-top: 160px; max-width: 1100px; margin: 0 auto;">
  <div class="section-header" style="text-align: center; margin-bottom: 48px;">
    <div class="section-eyebrow">Administrasjon</div>
    <h1 class="section-title">Rediger innhold</h1>
    <p class="section-subtitle">Oppdater tekster og bilder som vises p&aring; butikken.</p>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="notice" style="margin-bottom: 24px;"><%= error %></div>
  <% } %>

  <% if (saved) { %>
    <div class="notice" style="margin-bottom: 24px;">Innhold er lagret.</div>
  <% } %>

  <% const heroMetaItems = (content.hero.meta && content.hero.meta.length) ? content.hero.meta : ['']; %>
  <% const timelineItems = (content.timeline && content.timeline.length) ? content.timeline : [{ title: '', description: '', detail: '' }]; %>
  <% const benefitItems = (content.benefits && content.benefits.length) ? content.benefits : [{ title: '', description: '' }]; %>
  <% const specItems = (content.home && content.home.specs && content.home.specs.items && content.home.specs.items.length) ? content.home.specs.items : [{ value: '', label: '', detail: '' }]; %>
  <% const collectionItems = (content.collections && content.collections.length) ? content.collections : [{ title: '', subtitle: '', handle: '', pitch: '', lead: '' }]; %>

  <form class="form-grid" method="post" action="/admin/content" enctype="multipart/form-data">
    <div class="admin-block">
      <div class="admin-block-title">Merkevare</div>
      <div class="form-grid">
        <div>
          <label for="brand">Merkenavn</label>
          <input type="text" id="brand" name="brand" value="<%= content.brand %>">
        </div>
        <div>
          <label for="tagline">Tagline</label>
          <textarea id="tagline" name="tagline"><%= content.tagline %></textarea>
        </div>
      </div>
    </div>

    <div class="admin-block">
      <div class="admin-block-title">Hero</div>
      <div class="form-grid">
        <div>
          <label for="hero_eyebrow">Overlinje</label>
          <input type="text" id="hero_eyebrow" name="hero_eyebrow" value="<%= content.hero.eyebrow %>">
        </div>
        <div>
          <label for="hero_title">Tittel</label>
          <input type="text" id="hero_title" name="hero_title" value="<%= content.hero.title %>">
        </div>
        <div>
          <label for="hero_description">Beskrivelse</label>
          <textarea id="hero_description" name="hero_description"><%= content.hero.description %></textarea>
        </div>
      </div>

      <div class="repeat-columns">
        <div>
          <label for="hero_primary_label">Prim&aelig;r knappetekst</label>
          <input type="text" id="hero_primary_label" name="hero_primary_label" value="<%= content.hero.primaryCta.label %>">
        </div>
        <div>
          <label for="hero_primary_href">Prim&aelig;r lenke</label>
          <input type="text" id="hero_primary_href" name="hero_primary_href" value="<%= content.hero.primaryCta.href %>">
        </div>
        <div>
          <label for="hero_secondary_label">Sekund&aelig;r knappetekst</label>
          <input type="text" id="hero_secondary_label" name="hero_secondary_label" value="<%= content.hero.secondaryCta.label %>">
        </div>
        <div>
          <label for="hero_secondary_href">Sekund&aelig;r lenke</label>
          <input type="text" id="hero_secondary_href" name="hero_secondary_href" value="<%= content.hero.secondaryCta.href %>">
        </div>
      </div>

      <div class="repeat-columns">
        <div>
          <label for="hero_image">Last opp hero-bilde</label>
          <input type="file" id="hero_image" name="hero_image" accept="image/*" data-image-input data-preview-target="#hero-image-preview" style="padding: 12px;">
        </div>
        <div>
          <label for="hero_image_url">Eller bilde-URL</label>
          <input type="text" id="hero_image_url" name="hero_image_url" value="<%= content.hero.image %>">
        </div>
      </div>

      <div>
        <label>Forh&aring;ndsvisning</label>
        <img id="hero-image-preview" data-image-preview src="<%= content.hero.image %>" alt="Hero-bilde" style="margin-top: 12px; max-width: 320px; border: 1px solid var(--border);">
      </div>

      <div class="repeat-group" data-repeater>
        <div style="display: flex; align-items: center; justify-content: space-between; gap: 12px;">
          <div class="admin-block-title" style="margin: 0;">Hero-detaljer</div>
          <button class="btn ghost small" type="button" data-repeater-add data-template="hero-meta-template">Legg til linje</button>
        </div>
        <div class="repeat-list" data-repeater-list>
          <% heroMetaItems.forEach((item) => { %>
            <div class="repeat-item" data-repeater-item>
              <input type="text" name="hero_meta[]" value="<%= item %>" placeholder="F.eks. Fri frakt over 4 490,-">
              <div class="repeat-actions">
                <button class="btn ghost small" type="button" data-repeater-remove>Fjern</button>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <div class="admin-block">
      <div class="admin-block-title">Forside - seksjonsoverskrifter</div>
      <div class="form-grid">
        <div class="repeat-columns">
          <div>
            <label for="home_collections_eyebrow">Oppsett overlinje</label>
            <input type="text" id="home_collections_eyebrow" name="home_collections_eyebrow" value="<%= content.home.collections.eyebrow %>">
          </div>
          <div>
