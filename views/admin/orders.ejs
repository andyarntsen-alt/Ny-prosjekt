<%- include('../partials/layout-start') %>

<section class="section" style="padding-top: 160px;">
  <div class="section-header" style="margin-bottom: 48px;">
    <div class="section-eyebrow">Administrasjon</div>
    <h1 class="section-title">Ordre</h1>
  </div>
  
  <% if (orders.length === 0) { %>
    <p style="color: var(--text-secondary); text-align: center;">Ingen ordre enn&aring;.</p>
  <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Navn</th>
          <th>E-post</th>
          <th>Total</th>
          <th>Dato</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach((order) => { %>
          <tr>
            <td>#<%= order.id %></td>
            <td><%= order.name %></td>
            <td><%= order.email %></td>
            <td><%= formatMoney(order.total_cents) %></td>
            <td><%= new Date(order.created_at).toLocaleString('nb-NO') %></td>
            <td><a class="btn ghost small" href="/admin/orders/<%= order.id %>">Se detaljer</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
  
  <div class="product-actions" style="margin-top: 32px;">
    <a class="btn outline" href="/admin">Tilbake til kontrollsenter</a>
  </div>
</section>

<%- include('../partials/layout-end') %>
